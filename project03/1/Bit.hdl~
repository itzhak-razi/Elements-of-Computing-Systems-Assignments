/**
 * 1-bit memory register.
 * If load[t-1]=1 then out[t] = in[t-1]
 * else out does not change (out[t] = out[t-1])
 */

CHIP Bit {

    IN  in, load;
    OUT out;

    PARTS:
    // Works

    Mux(a=dffOut, b=in, sel=load, out=dffIn);
    DFF(in=dffIn, out=dffOut, out=out);

}
